student_name = "Miles Johnson" #Initial Stats
current_gpa = 3.8
study_hours = 5
social_points = 65
stress_level = 55
print()
print(f"WELCOME {student_name}!!")
print(f"Here are your current stats")
print(f"GPA:{current_gpa}")
print(f"Study hours: {study_hours}")
print(f"Social points: {social_points}")
print(f"Stress level: {stress_level}")
print()
print("Choose your course load:")
print("A) Light (12 credits)")  
print("B) Standard (15 credits)")
print("C) Heavy (18 credits)")

choice = input("Your choice: ")
#Choice Options
if choice == "A": #light load
    if current_gpa >= 3.5:
        study_hours = 3
        stress_level = 15
        print(f"You're doing well with a light load and might want to move to a medium load")
    elif  current_gpa >= 2.5:
        study_hours = 5
        stress_level = 40
        print(f"You're doing okay and it's reccomennded you should study {study_hours}+ hours a week")
    else:
        study_hours = 7
        stress_level = 75
        print(f"You need to lock in gang, I reccommend you study {10}+ hours a week")
        

elif choice == "B": #Medium load
    if current_gpa >= 3.5:
        study_hours = 5
        stress_level = 25
        print(f"You're doing well with a medium load and might want to move to a heavy load")
    elif  current_gpa >= 2.5:
        study_hours = 8
        stress_level = 50
        print(f"You're doing okay and it's reccomennded you should study {study_hours}+ hours a week")
    else:
        study_hours = 10
        stress_level = 85
        print(f"You need to lock in gang, I reccommend you study {study_hours}+ hours a week")

elif choice == "C": #Heavy load
    if current_gpa >= 3.5:
        study_hours = 5
        stress_level = 25
        print(f"You're doing well with a heavyload, You're goated gangalanche!")
    elif  current_gpa >= 2.5:
        study_hours = 9
        stress_level = 50
        print(f"You're doing okay and it's reccomennded you should study{study_hours}+ hours a week")
    else:
        study_hours = 12
        stress_level = 85
        print(f"You need to lock in gang, I reccommend you study {study_hours}+ hours a week")
else:
    print("Invalid Input")
print()
study_options = ["Programming", "Math", "English", "History"]
user_choice = input("What do you want to study?? ")
if user_choice not in study_options:
    print("Invalid Choice")
elif user_choice in study_options:
    print(f"Okay you chose {user_choice}! The more you study the better your grade! ")
print()
if social_points<= 50 and current_gpa <= 3.5:
    print("A study group is reccomennded, Learn those soft skills and get better!")
elif current_gpa>= 3.5 or social_points>= 50:
    print("According to your stats, \nyou may not need a study group, \nbut one can be beneficial and help you network!")
print()
study_plan = input("Do you have a study plan (Leave blank if not) ")
if study_plan != "" :
    print("You're a good student keep grinding!")
    if current_gpa <= 2.5:
        print("You made need revision to your plan")
else:
    print("I know you love AI lil dude. Use it to create personalized a study plan for you.")

semester_outcome =""

if current_gpa >= 3.5 and study_plan != "":
     semester_outcome = "You're him brodigy! Keep studying hard and you will succeed this semester"
elif current_gpa >= 3.5 and study_plan == "":
    semester_outcome = "You're making it work. Stay locked and create a study plan and you'll succeed"
elif current_gpa >= 2.5 and study_plan != "":
    semester_outcome = "The more you study the more your GPA will go up. You'll get there"
elif current_gpa >= 2.5 and study_plan == "":
    semester_outcome = "You need to get that study plan together or you're cooked gang. But I know you'll lock in"
elif current_gpa <2.0 and study_plan != "":
    semester_outcome = "You're cooked right now so you have to study to succeed."
elif current_gpa < 2.0 and study_plan == "":
    semester_outcome = "You're fried I can't lie. I'm begging you study"   
